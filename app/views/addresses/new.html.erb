<% provide(:title, 'Create Address') %>
<h1>Create Address</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@address, url: createaddress_path) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :state_or_province %>
      <%= f.text_field :state_or_province, class: 'form-control' %>

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>

      <%= f.label :contry, "Country" %>
      <%= f.select :contry, ['Egypt', 'Saudi Arabia', 'Jordan', 'Kuwait'], class: 'form-control'%>

      <%= f.submit "Add Address", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

